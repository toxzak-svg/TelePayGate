# Example .env.template for local development
# Copy this file to `.env` and fill in real values before running locally.

# Database
POSTGRES_USER=tg_user
POSTGRES_PASSWORD=tg_pass
POSTGRES_DB=tg_payment_dev
DATABASE_URL=postgresql://${POSTGRES_USER:-tg_user}:${POSTGRES_PASSWORD:-tg_pass}@localhost:5432/${POSTGRES_DB:-tg_payment_dev}

# Redis
REDIS_URL=redis://localhost:6379

# Telegram
TELEGRAM_BOT_TOKEN=

# TON Blockchain
TON_API_KEY=
TON_API_ENDPOINT=https://toncenter.com/api/v2/jsonRPC
TON_MAINNET=false

# Application secrets (rotate these!)
JWT_SECRET=replace-with-a-random-hex
API_SECRET_KEY=replace-with-a-random-hex

# Misc
PORT=3000
EMAIL_SMTP_HOST=mailhog
EMAIL_SMTP_PORT=1025
EMAIL_SMTP_SECURE=false
