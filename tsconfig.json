{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@tg-payment/core": ["./packages/core/src"],
      "@tg-payment/api": ["./packages/api/src"],
      "@tg-payment/bot": ["./packages/bot/src"],
      "@tg-payment/sdk": ["./packages/sdk/src"]
    }
  },
  "exclude": ["node_modules", "dist", "packages/dashboard"]
}
